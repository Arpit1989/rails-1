<%= form_for([@blog, @blog.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
<% if blogger_signed_in? -%>
    <%= f.text_field :commenter, :value => current_blogger.detail.firstname+" "+current_blogger.detail.lastname, :readonly => :readonly %>
<% else -%>
    <%= f.text_field :commenter %>
<% end -%>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment, :size => "43x3" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
